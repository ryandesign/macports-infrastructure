# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           net.macports 1.0

name                net.macports.distfiles-private
version             1

depends_run         port:net.macports.nginx

destroot.keepdirs   ${destroot}/Volumes/RAID${prefix}/var/www/macports/distfiles-private
destroot {
    xinstall -d -o buildbot -g buildbot ${destroot}/Volumes/RAID${prefix}/var/www/macports/distfiles-private
    xinstall -d ${destroot}${prefix}/etc/nginx/sites-available/ ${destroot}${prefix}/etc/nginx/sites-enabled/
    xinstall -m 644 ${filespath}/distfiles-private.conf.in ${destroot}${prefix}/etc/nginx/sites-available/distfiles-private.conf
    reinplace "s|@PREFIX@|${prefix}|g" ${destroot}${prefix}/etc/nginx/sites-available/distfiles-private.conf
    ln -s ../sites-available/distfiles-private.conf ${destroot}${prefix}/etc/nginx/sites-enabled/
}

# TODO: check config and reload nginx in post-activate and post-deactivate
