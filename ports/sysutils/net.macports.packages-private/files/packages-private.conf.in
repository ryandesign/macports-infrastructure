    allow 10.0.0.0/8;
    allow 127.0.0.0/8;
    allow 172.16.0.0/12;
    allow 192.168.0.0/16;
    deny all;

    server_name packages-private-origin.macports.org;
    server_name_in_redirect on;
    access_log @PREFIX@/var/log/nginx/packages-private-access.log main;
    error_log @PREFIX@/var/log/nginx/packages-private-error.log;

    root /Volumes/RAID@PREFIX@/var/www/macports/packages-private;
    autoindex on;

    location /robots.txt {
        allow all;
        return 200 "User-agent: *\nDisallow: /\n";
    }

    add_header Cache-Control "max-age=2592000, public";
    location ~ /$ {
        add_header Cache-Control "max-age=300, public";
    }
}

